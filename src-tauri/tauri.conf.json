{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "donote",
  "version": "0.1.0",
  "identifier": "com.duongonix.donote",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://192.168.0.103:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "donote",
        "width": 1000,
        "height": 800,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
